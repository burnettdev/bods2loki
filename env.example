# BODS API Configuration
BODS_API_KEY=your_bods_api_key_here
BODS_DATASET_ID=699
BODS_LINE_REFS=49x,7
BODS_INTERVAL=30s

# Loki Configuration
BODS_LOKI_URL=http://localhost:3100

# Optional: For Grafana Cloud Logs authentication
# BODS_LOKI_USER=123456
# BODS_LOKI_PASSWORD=glc_123

# Logging Configuration
LOG_LEVEL=info

# OpenTelemetry Configuration (Optional)
# Enable tracing and/or metrics
OTEL_TRACING_ENABLED=false
OTEL_METRICS_ENABLED=false

# Base endpoint for both traces and metrics (auto-appends /v1/traces and /v1/metrics)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
# OTEL_EXPORTER_OTLP_HEADERS=key1=value1,key2=value2
# OTEL_EXPORTER_OTLP_TIMEOUT=10s
# OTEL_EXPORTER_OTLP_COMPRESSION=gzip

# Signal-specific overrides (optional)
# OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
# OTEL_EXPORTER_OTLP_TRACES_HEADERS=Authorization=Basic xyz
OTEL_EXPORTER_OTLP_TRACES_INSECURE=true
# OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
# OTEL_EXPORTER_OTLP_METRICS_HEADERS=Authorization=Basic xyz
# OTEL_EXPORTER_OTLP_METRICS_INSECURE=true

# Pyroscope Profiling Configuration (Optional)
PYROSCOPE_PROFILING_ENABLED=false
PYROSCOPE_SERVER_ADDRESS=http://localhost:4040
PYROSCOPE_APPLICATION_NAME=bods2loki

# Optional: For basic authentication
# PYROSCOPE_BASIC_AUTH_USER=username
# PYROSCOPE_BASIC_AUTH_PASSWORD=password
